# ==============================================
# STYLO - Variables de Entorno
# ==============================================
# Copiar este archivo a .env y ajustar los valores

# Entorno: development | production
ENVIRONMENT=development

# ==============================================
# DJANGO
# ==============================================
SECRET_KEY=cambiar-esta-clave-en-produccion-usar-algo-seguro
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1

# ==============================================
# BASE DE DATOS (MySQL)
# ==============================================
DB_NAME=backend_stylo
DB_USER=root
DB_PASSWORD=leonel123
DB_HOST=localhost
DB_PORT=3306

# ==============================================
# REDIS (para Celery y cache)
# ==============================================
REDIS_URL=redis://localhost:6379/0
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# ==============================================
# CORS (Frontend URLs permitidas)
# ==============================================
CORS_ALLOWED_ORIGINS=http://localhost:5173,http://127.0.0.1:5173

# ==============================================
# JWT (Tiempos de expiración en minutos/días)
# ==============================================
ACCESS_TOKEN_LIFETIME_MINUTES=60
REFRESH_TOKEN_LIFETIME_DAYS=7

# ==============================================
# OTP (One Time Password)
# ==============================================
OTP_LENGTH=6
OTP_EXPIRY_MINUTES=5
REGISTRATION_TOKEN_EXPIRY_MINUTES=15

# Proveedor OTP: mock | twilio | whatsapp
# - mock: muestra OTP en consola (desarrollo)
# - twilio: envia SMS via Twilio
# - whatsapp: usa plantilla Meta WhatsApp
OTP_PROVIDER=twilio

# Twilio Verify (cuando OTP_PROVIDER=twilio)
TWILIO_VERIFY_SERVICE_SID=VAxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# ==============================================
# WHATSAPP API
# ==============================================
# Proveedor: mock | twilio | meta
WHATSAPP_PROVIDER=mock

# Twilio (si WHATSAPP_PROVIDER=twilio)
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_WHATSAPP_FROM=

# Meta Cloud API (si WHATSAPP_PROVIDER=meta)
META_WHATSAPP_TOKEN=
META_WHATSAPP_PHONE_ID=

# ==============================================
# SENTRY (solo producción)
# ==============================================
SENTRY_DSN=

# ==============================================
# FRONTEND
# ==============================================
VITE_API_URL=http://localhost:8000/api/v1
